<FileEdit>:
    file_name_input: file_name_input
    text_input: code_input
    canvas.before:
        Color:
            rgba: get_color_from_hex("#E8E8E8FF")
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        size: self.parent.size
        orientation: "vertical"
        ActionBar:
            height: 70
            size_hint_y: None
            ActionView:
                ActionPrevious:
                    title: app.title
                    app_icon: ""
                    on_press: root.manager.current = "main"
                ActionGroup:
                    font_name: "NotoSansCJKjp-Light"
                    text: "シンタックスハイライト"
                    mode: 'spinner'
                    ActionButton:
                        text: "Default"
                        on_release: code_input.change_style()
                    ActionButton:
                        text: "Emacs"
                        on_release: code_input.change_style("emacs")
                    ActionButton:
                        text: "Friendly"
                        on_release: code_input.change_style("friendly")
                    ActionButton:
                        text: "Colorful"
                        on_release: code_input.change_style("colorful")
        AnchorLayout:
            anchor_x: "center"
            padding: 20.5, 20, 20.5, 20
            BoxLayout:
                orientation: "vertical"
                TextInput:
                    id: file_name_input
                    hint_text: "Title: as the file name."
                    height: 30
                    font_size: 10
                    size_hint_y: None
                    font_name: "NotoSansCJKjp-Light"
                    multiline: False
                    background_color: get_color_from_hex("#FFFFFF")
                MakodeditCodeInput:
                    id: code_input
                    font_name: "NotoSansMonoCJKjp-Regular"
                    auto_indent: True
                    font_size: 12
                    background_color: get_color_from_hex("#FFFFFF")
        BoxLayout:
            orientation: "horizontal"
            height: 50
            size_hint_y: None
            AnchorLayout:
                anchor_x: "right"
                Button:
                    size: 50, self.parent.height
                    size_hint: None, None
                    background_normal: "images/mini-save-memo_btn.png"
                    background_down: "images/mini-save-memo_btn_pressed.png"
                    font_name: "NotoSansCJKjp-Light"
                    font_size: 14
                    on_release: root.show_save_dialog()
                Widget:
                    width: 20
                    size_hint: None, None
            AnchorLayout:
                anchor_x: "left"
                Button:
                    size: 50, self.parent.height
                    size_hint: None, None
                    background_normal: "images/mini-open-memo_btn.png"
                    background_down: "images/mini-open-memo_btn_pressed.png"
                    font_name: "NotoSansCJKjp-Light"
                    on_release: root.show_load_dialog()
        AnchorLayout:
            anchor_x: "center"
            height: 135
            width: 135
            size_hint: None, None
            Widget:
                size: self.parent.width, self.parent.height
                size_hint: None, None


<Tutorial>:
    BoxLayout:
        size: self.parent.size
        orientation: "vertical"
        ActionBar:
            height: 70
            size_hint_y: None
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: app.title
                    app_icon: ""
                    on_press: root.manager.current = "main"
                ActionGroup:
                    font_name: "NotoSansCJKjp-Light"
                    text: "目次"
                    mode: 'spinner'
                    ActionButton:
                        text: "このアプリについて"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[0])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]
                    ActionButton:
                        text: "カスタマイズ"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[1])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]                        
                    ActionButton:
                        text: "はじめるには"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[2])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]
                    ActionButton:
                        text: "ファイルを書く"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[3])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]
                    ActionButton:
                        text: "ファイルを開く"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[4])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]
                    ActionButton:
                        text: "ファイルを保存する"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[5])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]
                    ActionButton:
                        text: "ファイルのエンコード"
                        font_name: "NotoSansCJKjp-Light"
                        on_release: carousel.load_slide(carousel.slides[6])
                        size_hint_x: None
                        minimum_width: self.texture_size[0]
        Carousel:
            id: carousel
            canvas.before:
                Color:
                    rgba: get_color_from_hex("#E8E8E8FF")
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "Makodeditはシンプルなテキストエディタです。"
                Image:
                    source: "images/phone_in_hand.png"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    font_size: 12
                    color: get_color_from_hex("#009688")
                    text: "続けて見るには左右どちらかにスライドしてください"
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "このアプリはKivyを使用しているので、"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "Kv言語の知識があれば、\n.kvファイルの内容をカスタマイズして、"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "見た目や機能を変えることができます。"
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "ファイルを書いたり開くには"
                Image:
                    source: "images/manage-memo_btn.png"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "をタップします。"
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "ファイルを書くには"
                Image:
                    source: "images/create-memo_btn.png"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "をタップします。"
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "ファイルを開くには"
                Image:
                    source: "images/open-memo_btn.png"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "をタップします。"
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "書いたテキストを保存するには"
                Image:
                    source: "images/save-memo_btn.png"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "をタップします。"
            BoxLayout:
                orientation: "vertical"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "ファイルのエンコードは"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "UTF-8"
                Label:
                    font_name: "NotoSansCJKjp-Light"
                    color: get_color_from_hex("#000000")
                    text: "です。"


